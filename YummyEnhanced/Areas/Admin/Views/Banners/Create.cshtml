@model YummyEnhanced.ViewModels.Banner.BannerCreateVM

@{
    ViewData["Title"] = "Create Banner";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Create New Banner</h6>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
        <div class="card-body">

            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label fw-bold">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="e.g. Delicious Food Delivered" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="VideoUrl" class="form-label fw-bold">Video URL <small class="text-muted fw-normal">(Optional)</small></label>
                        <input asp-for="VideoUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=..." />
                        <span asp-validation-for="VideoUrl" class="text-danger small"></span>
                        <small class="form-text text-muted">Paste a YouTube or Vimeo link here.</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a short, catchy description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ButtonText" class="form-label fw-bold">Button Text</label>
                        <input asp-for="ButtonText" class="form-control" placeholder="e.g. Book a Table" />
                        <span asp-validation-for="ButtonText" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ButtonLink" class="form-label fw-bold">Button Link</label>
                        <input asp-for="ButtonLink" class="form-control" placeholder="e.g. #book-a-table" />
                        <span asp-validation-for="ButtonLink" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Image" class="form-label fw-bold">Banner Image</label>
                    <div class="input-group">
                        <input asp-for="Image" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp" id="imageUpload" />
                    </div>
                    <span asp-validation-for="Image" class="text-danger small"></span>
                    <small class="text-muted d-block mt-1">
                        <i class="fas fa-info-circle"></i> Max size: 5MB. Formats: JPG, PNG, WebP.
                    </small>
                </div>

                <hr />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Save Banner
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}