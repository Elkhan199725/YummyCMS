@model YummyEnhanced.ViewModels.Banner.BannerUpdateVM

@{
    ViewData["Title"] = "Update Banner";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Edit Banner</h6>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </div>
        <div class="card-body">

            <form asp-action="Update" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        <label class="form-label fw-bold">Current Image</label>
                        <div class="card p-2 border-0 bg-light">
                            <img src="~/uploads/banners/@Model.ExistingImageUrl"
                                 class="img-fluid rounded shadow-sm"
                                 alt="Current Banner" />
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Title</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="VideoUrl" class="form-label fw-bold">Video URL</label>
                                <input asp-for="VideoUrl" class="form-control" />
                                <span asp-validation-for="VideoUrl" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ButtonText" class="form-label fw-bold">Button Text</label>
                                <input asp-for="ButtonText" class="form-control" />
                                <span asp-validation-for="ButtonText" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ButtonLink" class="form-label fw-bold">Button Link</label>
                                <input asp-for="ButtonLink" class="form-control" />
                                <span asp-validation-for="ButtonLink" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label fw-bold">Replace Image <small class="text-muted fw-normal">(Optional)</small></label>
                            <input asp-for="Image" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
                            <span asp-validation-for="Image" class="text-danger small"></span>
                            <small class="text-muted">Leave empty to keep the current image.</small>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-warning px-4 text-white">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}