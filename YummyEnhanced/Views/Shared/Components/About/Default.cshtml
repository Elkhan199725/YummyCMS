@model About

<section id="about" class="about section">

    <div class="container section-title" data-aos="fade-up">
        <h2>@Model.Title</h2>
        <p><span>@Model.Header</span> <span class="description-title">About Our Story</span></p>
    </div>

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-5 position-relative align-self-start" data-aos="fade-up" data-aos-delay="100">

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/uploads/about/@Model.ImageUrl" class="img-fluid" alt="@Model.Title" style="width: 100%; object-fit: cover; border-radius: 10px;">
                }
                else
                {
                    <img src="~/assets/img/about.jpg" class="img-fluid" alt="Default About" style="width: 100%; object-fit: cover; border-radius: 10px;">
                }

                <a href="#book-a-table" class="book-a-table text-decoration-none">
                    <h3>Book a Table</h3>
                    <p>@Model.PhoneNumber</p>
                </a>
            </div>

            <div class="col-lg-7" data-aos="fade-up" data-aos-delay="250">
                <div class="content ps-0 ps-lg-5">

                    <p class="fst-italic lead">
                        @Model.Description
                    </p>

                    <ul>
                        <li><i class="bi bi-check-circle-fill"></i> <span>Fresh ingredients sourced daily from local markets.</span></li>
                        <li><i class="bi bi-check-circle-fill"></i> <span>Award-winning chefs with over 20 years of experience.</span></li>
                        <li><i class="bi bi-check-circle-fill"></i> <span>A cozy, family-friendly atmosphere for all occasions.</span></li>
                    </ul>

                    <div class="mt-4 p-3 bg-light rounded border-start border-4 border-danger">
                        <figure class="mb-0">
                            <blockquote class="blockquote">
                                <p class="mb-0 fs-6 fst-italic">"Cooking is an art, but serving people is a privilege."</p>
                            </blockquote>
                            <figcaption class="blockquote-footer mt-1 mb-0">
                                @Model.CEOName <cite title="Job Title">- @Model.CEOJob</cite>
                            </figcaption>
                        </figure>
                    </div>

                </div>
            </div>
        </div>

    </div>

</section>